#include<stdio.h>

void PrintArray(int *A, int n){
    for (int i = 0; i<n; i++){
        printf("%d ", A[i]);
    }
    printf("\n");
}

void SelectionSort(int *A, int n){
    int IndexofMin, temp;
    printf("Running selection sort...\n");
    for (int i=0; i<n-1; i++){
        IndexofMin = i;
        for (int j=i+1; j<n; j++){
            if(A[j] < A[IndexofMin]){
                IndexofMin = j;
            }
        }
        temp = A[i];
        A[i] = A[IndexofMin];
        A[IndexofMin] = temp;
    }
    
}

int main(){
    int A[] = {12, 54, 65, 7, 80, 112};
    int n = sizeof(A)/sizeof(int);
    PrintArray(A,n);
    SelectionSort(A, n);
    printf("Sorted Array: ");
    PrintArray(A,n);
    return 0;
}

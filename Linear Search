#include<stdio.h>

int LineaerSearch(int arr[], int size, int element){
    for (int i=0; i<size; i++){
        if(arr[i] == element){
            return i;
        }
    }
    return -1;
}

int main(){
    int element;
    int arr[] = {1, 3, 5, 10, 50, 67, 98, 36,67};
    int size = sizeof(arr)/ sizeof(int);
    printf("Enter the element to search: \n");
    scanf("%d", &element);
    int searchIndex = LineaerSearch(arr, size, element);
    if (searchIndex != -1)
        printf("The element %d was found at index %d\n", element, searchIndex);
    else
        printf("The element %d was not found in the array.\n", element);
    
    return 0;
}

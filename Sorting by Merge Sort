#include<stdio.h>

void PrintArray(int *A, int n){
    for (int i = 0; i<n; i++){
        printf("%d ", A[i]);
    }
    printf("\n");
}

void Merge(int A[], int mid, int low, int high){
    int i, j, k, B[100];
    i = low;     //starting index of left subarray
    j = mid+1;  //starting index of right subarray
    k=low;      //starting index of temporary (B) subarray
    while(i<=mid && j<=high){
        if(A[i] < A[j]){       // if left element is smaller
            B[k] = A[i];
            i++;
            k++;
        }
        else{                   // if right element is smaller
            B[k] = A[j];
            j++;
            k++;
        }
    }
    while(i<=mid){
        B[k] = A[i];
        k++;
        i++;
    }
    while(j<=high){
        B[k] = A[j];
        k++;
        j++;
    }
    for(i=low; i<=high; i++){       
        A[i] = B[i];
    }
}

void MergeSort(int A[], int low, int high){
    int mid;
    if(low<high){
        mid  = (low+high)/2;
        MergeSort(A,low,mid);
        MergeSort(A,mid+1, high);
        Merge(A, mid, low, high);
    }
}

int main(){
    int A[] = {12, 54, 65, 7, 80, 112};
    int n = sizeof(A)/sizeof(int);
    PrintArray(A,n);
    MergeSort(A, 0, n-1);
    printf("Sorted Array: ");
    PrintArray(A,n);
    return 0;
}
